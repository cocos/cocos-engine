#include <decode-standard>
#if CC_USE_MORPH
  #include <morph>
#endif
#if CC_USE_SKINNING
  #include <cc-skinning>
#endif

void CCVertInput(inout StandardVertInput In)
{
  CCDecode(In);
  #if CC_USE_MORPH
    applyMorph(In.position, In.normal, In.tangent);
  #endif
  #if CC_USE_SKINNING
    CCSkin(In.position, In.normal, In.tangent);
  #endif
}