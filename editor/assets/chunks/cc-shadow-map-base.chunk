      block6 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset6)));
      block7 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset7)));
      block8 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset8)));
      block9 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset9)));
      block10 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset10)));
      block11 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset11)));
      block12 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset12)));
      block13 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset13)));
      block14 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset14)));
      block15 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset15)));
      block16 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset16)));
      block17 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset17)));
      block18 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset18)));
      block19 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset19)));
      block20 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset20)));
      block21 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset21)));
      block22 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset22)));
      block23 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset23)));
      block24 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset24)));
      block25 = step(offsetDepth, unpackRGBAToDepth(texture(cc_spotLightingMap, offset25)));
    #else
      block1 = step(offsetDepth, texture(cc_spotLightingMap, offset1).x);
      block2 = step(offsetDepth, texture(cc_spotLightingMap, offset2).x);
      block3 = step(offsetDepth, texture(cc_spotLightingMap, offset3).x);
      block4 = step(offsetDepth, texture(cc_spotLightingMap, offset4).x);
      block5 = step(offsetDepth, texture(cc_spotLightingMap, offset5).x);
      block6 = step(offsetDepth, texture(cc_spotLightingMap, offset6).x);
      block7 = step(offsetDepth, texture(cc_spotLightingMap, offset7).x);
      block8 = step(offsetDepth, texture(cc_spotLightingMap, offset8).x);
      block9 = step(offsetDepth, texture(cc_spotLightingMap, offset9).x);
      block10 = step(offsetDepth, texture(cc_spotLightingMap, offset10).x);
      block11 = step(offsetDepth, texture(cc_spotLightingMap, offset11).x);
      block12 = step(offsetDepth, texture(cc_spotLightingMap, offset12).x);
      block13 = step(offsetDepth, texture(cc_spotLightingMap, offset13).x);
