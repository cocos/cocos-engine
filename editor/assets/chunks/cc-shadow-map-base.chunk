      block16 = step(offsetDepth, texture(cc_spotLightingMap, offset16).x);
      block17 = step(offsetDepth, texture(cc_spotLightingMap, offset17).x);
      block18 = step(offsetDepth, texture(cc_spotLightingMap, offset18).x);
      block19 = step(offsetDepth, texture(cc_spotLightingMap, offset19).x);
      block20 = step(offsetDepth, texture(cc_spotLightingMap, offset20).x);
      block21 = step(offsetDepth, texture(cc_spotLightingMap, offset21).x);
      block22 = step(offsetDepth, texture(cc_spotLightingMap, offset22).x);
      block23 = step(offsetDepth, texture(cc_spotLightingMap, offset23).x);
      block24 = step(offsetDepth, texture(cc_spotLightingMap, offset24).x);
