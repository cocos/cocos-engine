{
  "name": "cocos-creator",
  "version": "3.8.2",
  "description": "Cocos Creator is a cross-platform 2D & 3D game engine written in C++ and TypeScript, licensed under MIT.",
  "homepage": "http://www.cocos.com",
  "license": "MIT",
  "authors": [
    "AUTHORS.txt"
  ],
  "module": "index.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "server": "http-server . -p 8002 -o playground/index.html",
    "postinstall": "gulp build-debug-infos && npm run build-declaration && npm run bundle-adapter && npm run fetch-ral && npm run install:native-pack-tool",
    "build": "gulp build",
    "build:dev": "gulp build-h5-source",
    "build:min": "gulp build-h5-minified",
    "build-declaration": "npm run build-const && gulp build-declarations",
    "checkout-engine-version": "node ./scripts/checkout-engine-version.js",
    "verify-engine-version": "node ./scripts/verify-engine-version.js",
    "fetch-ral": "node ./scripts/fetch-ral.js",
    "bundle-adapter": "node ./scripts/bundle-adapter.js",
    "build-const": "node ./scripts/build-const.js",
    "clear": "node ./scripts/clear-cache.js",
    "clear-platform": "node ./native/utils/clear-platform.js && node ./scripts/clear-file.js",
    "update:native-external": "node ./native/utils/update-external.js",
    "test": "gulp test",
    "generate-doc-info": "node ./scripts/generate-doc-info",
    "install:native-pack-tool": "cd ./scripts/native-pack-tool && npm install && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cocos-creator/engine.git"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-export-default-from": "^7.17.12",
    "@babel/preset-env": "7.8.7",
    "@cocos/babel-preset-cc": "2.2.0",
    "@cocos/build-engine": "4.4.3",
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^24.9.1",
    "@types/yargs": "^12.0.14",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "async": "^2.6.4",
    "axios": "^1.4.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "chalk": "^2.4.1",
    "child_process": "^1.0.2",
    "commander": "^2.20.3",
    "dat.gui": "^0.7.5",
    "del": "^6.0.0",
    "eslint": "^8.44.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "fs": "^0.0.1-security",
    "fs-extra": "^7.0.1",
    "ftp": "0.3.10",
    "gulp": "^4.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-sequence": "^1.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-zip": "^5.0.2",
    "http-server": "^0.12.3",
    "jest": "^28.0.2",
    "jest-environment-jsdom": "^28.0.2",
    "jest-extended": "^1.1.0",
    "jest-matcher-deep-close-to": "^2.0.1",
    "jsdom": "^19.0.0",
    "node-fetch": "^2.6.1",
    "path": "^0.12.7",
    "pngjs": "^6.0.0",
    "progress": "^2.0.3",
    "spectorjs": "^0.9.15",
    "stats.js": "^0.17.0",
    "tar": "^6.1.15",
    "tmp": "^0.2.1",
    "tree-kill": "^1.2.0",
    "ts-jest": "^28.0.8",
    "typescript": "^4.3.5",
    "vconsole": "^3.3.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "which": "^2.0.2",
    "yargs": "^12.0.5"
  },
  "dependencies": {
    "@cocos/box2d": "1.0.1",
    "@cocos/cannon": "1.2.8",
    "@cocos/ccbuild": "2.0.3-alpha.18",
    "@cocos/dragonbones-js": "^1.0.1"
  }
}
